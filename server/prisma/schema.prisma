generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

enum Role {
  ADMIN
  USER
}

model Users {
  id          Int @id @default(autoincrement())
  name        String
  email       String @unique
  role        Role @default(USER)
  password    String
  image       String
}

enum Category {
  HEADPHONES
  SPEAKERS
  EARPHONES
}
model Product {
  id              Int @id @default(autoincrement())
  name            String @unique
  price           Float
  discountedPrice Float? @default(0)
  description     String
  accessories     String[]
  category        Category
  isFeatured      Boolean
  image           String
  features        String
  stock           Int
  isPromoted      Boolean @default(false)
  events          Event[] // one to many relation with the events 
  
}

model Event {
  id              Int      @id @default(autoincrement())
  name            String   @unique
  startDate       DateTime
  endDate         DateTime
  product         Product? @relation(fields: [productId], references: [id])
  productId       Int?
  discount        Float?
}
