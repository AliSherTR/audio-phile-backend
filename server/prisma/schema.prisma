generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  HEADPHONES
  SPEAKERS
  EARPHONES
}


model Product {
  id              Int @id @default(autoincrement())
  name            String @unique
  price           Float
  description     String
  accessories     String[]
  category        Category
  isFeatured      Boolean
  image           String
  features        String
}